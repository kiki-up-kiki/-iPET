.content{
  height:100%;
}
.background {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}
.chatlist{
  height:800px;
}
.lan{
position: fixed;
bottom: 0;
z-index: 10;
width: 100%;
height: auto;
padding: 10px 0 0 5px;
background-color:rgba(230,230,230,0.8);
}
.lan input{
  width: 67%;
  height: 24px;
  border: 1px solid gray;
  float: left;
}
.lan button{
  width: 15%;
  height: 24px;
  padding: 0;
  float: left;
}
.chat_left{
  float: left;
  width: 50%;
  height: auto;

  padding: 10px;
}
.chat_right{
  float: right;
  width: 50%;
  height: auto;

  text-align: right;
  padding: 10px;
}
.block_div{
  width: 100%;
  height: 54px;
  float: left;
}
.leftMsg {
  font-size: 35rpx;
  color: #444;
  line-height: 7vw;
  padding: 2vw 2.5vw;
  background-color: #fff;
  margin-left: -1.6vw;
  border-radius: 10rpx;
  z-index: 10;
}

.rightMsg {
  font-size: 35rpx;
  color: #444;
  line-height: 7vw;
  padding: 2vw 2.5vw;
  background-color: #96EB6A;
  margin-right: -1.6vw;
  border-radius: 10rpx;
  z-index: 10;
}
